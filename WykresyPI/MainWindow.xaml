<Window x:Class="WykresyPI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="800" Width="800">
    <Grid>
        <Button Click="ButtonBase_OnClick" Width="80" VerticalAlignment="Top" Content="Rysuj!" HorizontalAlignment="Left" Height="40"></Button>
        <Button Width="80" Click="ButtonBase_OnClick2" Height="40" Content="Zapisz" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,50,0,0"></Button>
        <CheckBox x:Name="CheckBoxObj" Margin="10,100,0,0" Content="Na biało czarno"></CheckBox>
        <CheckBox x:Name="CheckBoxObj2" Margin="10,120,0,0" Content="Biale tło"></CheckBox>
        <StackPanel VerticalAlignment="Top">
        <TextBox VerticalAlignment="Top" AcceptsReturn="True" Height="150" Width="200"   x:Name="tekst">
        </TextBox>
        <Canvas HorizontalAlignment="Left" x:Name="canvasObj" Width="700" Background="Azure" Height="400" Margin="170,30,0,0"></Canvas>
        </StackPanel>
    </Grid>
</Window>
